{{#with accounts}}
<div class="container">
    <div class="page-header">
        <form class="form-horizontal" method="get" action="">
            <fieldset>

                <!-- Form Name -->
                <legend class="text-center">
                    <h1>Jars Saving</h1>
                </legend>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="salary">Your salary</label>
                    <div class="col-md-4">
                        <input id="salary" name="salary" type="number" min="0" placeholder=""
                            class="form-control input-md" required="">
                    </div>
                </div>

                <!-- Button -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="submit"></label>
                    <div class="col-md-4">
                        <input type="submit" value="Calculate" class="btn btn-primary" />
                    </div>
                </div>

            </fieldset>
        </form>

    </div>
    <div class="container text-center">
        <div class="row stylish-panel">
            <div class="col-md-12">
                <div>
                    <img src="images/task1/nec.jpeg" alt="Texto Alternativo" class="img-circle img-thumbnail">
                    <h3>Necessity account <small>55%</small></h3>
                    <h2 class="jars">{{NecessityValue}}</h2>
                </div>
            </div>
            <div class="col-md-6">
                <div>
                    <img src="images/task1/ffa.jpeg" alt="Texto Alternativo" class="img-circle img-thumbnail">
                    <h3>Financial freedom account <small>10%</small></h3>
                    <h2 class="jars">{{FinancialFreedomValue}}</h2>
                </div>
            </div>
            <div class="col-md-6">
                <div>
                    <img src="images/task1/give.jpeg" alt="Texto Alternativo" class="img-circle img-thumbnail">
                    <h3>Give account <small>5%</small></h3>
                    <h2 class="jars">{{GiveValue}}</h2>
                </div>
            </div>
                
            </div>
            <div class="row stylish-panel">
            <div class="col-md-4">
                <div>
                    <img src="images/task1/edu.jpeg" alt="Texto Alternativo" class="img-circle img-thumbnail">
                    <h3>Education account <small>10%</small></h3>
                    <h2 class="jars">{{EducationValue}}</h2>
                </div>
            </div>
            <div class="col-md-4">
                <div>
                    <img src="images/task1/saving.jpeg" alt="Texto Alternativo" class="img-circle img-thumbnail">
                    <h3>Long-term saving for spending account <small>10%</small></h3>
                    <h2 class="jars">{{LongTermValue}}</h2>
                </div>
            </div>
            <div class="col-md-4">
                <div>
                    <img src="images/task1/play.jpeg" alt="Texto Alternativo" class="img-circle img-thumbnail">
                    <h3>Play account <small>10%</small></h3>
                    <h2 class="jars">{{PlayValue}}</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<!--footer-->
<footer class="container-fluid text-center">
